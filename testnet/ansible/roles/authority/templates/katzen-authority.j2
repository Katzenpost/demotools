[Unit]
Description=Katzenpost Authority
After=network.target

[Service]
Type=simple
User=katzenpost-authority
WorkingDirectory=/var/lib/katzenpost-authority
ExecStart=/usr/bin/nonvoting -f /etc/katzenpost/authority.toml
PrivateTmp=yes
NoNewPrivileges=yes
# RestartSec=5
Restart=on-failure

[Install]
WantedBy=default.target
